@{
    ViewData["Title"] = "Home Page";

}
@using React.AspNet
<div class="row">
    @foreach (var val in Model)
    {

        @foreach (var item in val.Value)
        {

            <div class="col-md-3">
                <div class="hpanel">
                    <div class="panel-body">
                        <div class="dropdown">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                                <small class="text-muted">Перевести деньги <b class="caret"></b></small>
                            </a>
                            <ul class="dropdown-menu animated flipInX m-t-xs">
                                <li><a onclick="OneCurr()" href="#">На счет в этой валюте</a></li>
                                <li><a onclick="OtherCurr()" href="#">На счет в другую валюту</a></li>
                            </ul>
                        </div>

                        <div class="stats-title pull-left">
                            <h4>@val.Key</h4>
                        </div>
                        <div class="stats-icon pull-right">
                            <i class="pe-7s-cash fa-4x"></i>
                        </div>
                        <div class="m-t-xl">
                            <span>$ </span><span class="text-warning"> @item</span>

                        </div>
                    </div>
                </div>
            </div>
        }
    }
   
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                </div>
                Cards' information
            </div>
            <div class="panel-body">
                <div id="content"></div>
            </div>
            <div class="panel-footer">
                Your Last transaction: 21.05.2015
            </div>
        </div>
    </div>
</div>

