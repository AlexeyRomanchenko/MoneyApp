@using PVT.Money.Business;
@model IEnumerable<Wallet>

@{

    ViewData["Title"] = "Home Page";
    

}
@using React.AspNet

<div id="anchor"></div>
<div class="row">
    @foreach (Wallet val in Model)
    {

      

            <div class="col-md-3">
                <div class="hpanel">
                    <div class="panel-body">
                        <div class="dropdown">
                            <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                                <small class="text-muted">Перевести деньги <b class="caret"></b></small>
                               
                            </a>
                            <ul class="dropdown-menu animated flipInX m-t-xs">
                                <li><a onclick="OneCurr(@val.WalletId,'@val.Currency')" href="#">На счет в этой валюте</a></li>
                                <li><a onclick="currencyExchange(@val.WalletId,'@val.Currency','@val.Value')" href="#">На счет в другую валюту</a></li>
                            </ul>
                        </div>

                        <div class="stats-title pull-left">
                            <h4>@val.WalletName</h4>
                        </div>
                        <div class="stats-icon pull-right">
                            <i class="pe-7s-cash fa-4x"></i>
                        </div>
                        <div class="m-t-xl">
                            <span>@val.Currency </span><span class="text-warning"> @val.Value</span>

                        </div>
                    </div>
                </div>
            </div>
        
    }
   
</div>

<input type="hidden" id="secondWalletId"/>
<input type="hidden" id="virtDir" value="@Url.Action()" />
                <div id="content"></div>
            

