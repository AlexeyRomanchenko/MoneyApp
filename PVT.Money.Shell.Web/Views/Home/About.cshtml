@{
    ViewData["Title"] = "Welcome to user manager!";
}
<h2>@ViewData["Title"]</h2>
<hr />
<p></p>
@model IEnumerable<PVT.Money.Business.User>

<input type="hidden" id="virtDir" value="" />
<div class="col-md-4 hpanel">
    <div class="panel-heading">
        <div class="panel-tools">
            <a class="showhide"><i class="fa fa-chevron-up"></i></a>
            <a class="closebox"><i class="fa fa-times"></i></a>
        </div>
        List of users:
    </div>
    <div class="panel-body">
        @foreach (PVT.Money.Business.User b in Model)
        {
            <p onclick="userInfo('@b.Id')">@b.Login</p>
        }
        </div>
    </div>
    <div class="col-md-8">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    <a class="closebox"><i class="fa fa-times"></i></a>
                </div>
                List of permissions:
            </div>
            <div class="panel-body">
                <table id="example1" class="table table-striped table-bordered table-hover" width="100%">
                    <thead>
                        <tr>
                            <th>Currency</th>
                            <th>Value</th>
                            <th>Wallet Name</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
    </div>



